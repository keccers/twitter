source 'https://rubygems.org'

# PostgreSQL driver
gem 'pg'

# Sinatra driver
gem 'sinatra'
gem 'sinatra-contrib'

# Use Thin for our web server
gem 'thin'

gem 'activesupport'
gem 'activerecord'

gem 'rake'
gem 'shotgun'

gem 'bcrypt-ruby'
gem 'twitter'

# Use Sass for styling
gem 'sass'
gem 'bourbon'
gem 'neat'

group :test, :development do
  gem 'pry'
  gem 'debugger'
  gem 'faker'
  gem 'rspec'
end
