source 'https://rubygems.org'

# PostgreSQL driver
gem 'pg'

# Sinatra driver
gem 'sinatra'
gem 'sinatra-contrib'

# Use Thin for our web server
gem 'thin'

gem 'activesupport'
gem 'activerecord'

gem 'rake'
gem 'shotgun'

gem 'bcrypt-ruby'
gem 'twitter'
gem 'oauth'
gem 'redis'
gem 'sidekiq'

# Use Sass for styling
gem 'sass'
gem 'bourbon'
gem 'neat'

group :test, :development do
  gem 'pry'
  gem 'debugger'
  gem 'faker'
  gem 'rspec'
end


group :test do
  gem 'rspec'
  # gem 'cap'
  gem 'shoulda-matchers'
end
