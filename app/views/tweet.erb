<% if @current_user %>
 <h1><%= @current_user.username %></h1>
<% end %>

<div class="create">
  <form id='create_tweet' action='/tweet/create' method='POST'>
    <label for='text'>Tweet Text:
      <input type='text' name='text' placeholder="Tweet text...">
    </label>
    <br/><br/>
    <label for="date">Send On:
      <input id="date" type="date" name="date">
    </label>
    <input type='submit' value='submit'>
  </form>
  <h2 id="loading">Loading...</h2>
</div>

<% if @current_user %>
  <p>
    <button><a href="/sign_out">Sign Out</a></button>
  </p>
<% end %>
